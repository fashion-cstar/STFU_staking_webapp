{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "checkJs": false,
    "jsxImportSource": "@emotion/react",
    "incremental": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "src/theme/colors.js"
  ],
  "exclude": [
    "node_modules",
    "public",    
    "**/*.esm.js",
    "build"
  ]
}
